<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0"
            prefHeight="595.0" prefWidth="1008.0" xmlns="http://javafx.com/javafx/8.0.40"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="kz.hts.ce.controller.products.ShopProductsController">
    <children>
        <TableView fx:id="productTable" layoutX="51.0" layoutY="97.0" prefHeight="461.0" prefWidth="907.0">
            <columns>
                <TableColumn fx:id="barcode" prefWidth="155.0" text="Штрих код"/>
                <TableColumn fx:id="name" prefWidth="297.0" text="Наименование"/>
                <TableColumn fx:id="price" prefWidth="297.0" text="Цена"/>
                <TableColumn fx:id="unit" prefWidth="297.0" text="Единица измерения"/>
                <TableColumn fx:id="amount" prefWidth="297.0" text="Привезено"/>
                <TableColumn fx:id="residue" prefWidth="297.0" text="Остаток"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <Label layoutX="51.0" layoutY="14.0" text="Товары на складе">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <Label layoutX="51.0" layoutY="70.0" text="Категория: ">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <ComboBox fx:id="categories" layoutX="144.0" layoutY="71.0" onAction="#findProductsByCategories"
                  prefHeight="25.0" prefWidth="180.0"/>
    </children>
</AnchorPane>
